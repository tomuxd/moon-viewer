{
  "moonViewer": {
    "defaultCamera": {
      "position": [
        0,
        0,
        5
      ],
      "zoom": 50,
      "rotation": 0
    },
    "controls": {
      "enableDamping": true,
      "dampingFactor": 0.05,
      "enableZoom": true,
      "enablePan": false,
      "minDistance": 2,
      "maxDistance": 10,
      "rotateSpeed": 1.0,
      "zoomSpeed": 1.2
    },
    "lighting": {
      "ambientIntensity": 0.3,
      "directionalIntensity": 1.0,
      "shadowMapEnabled": true
    },
    "markers": {
      "defaultSize": 8,
      "hoverScale": 1.3,
      "selectedScale": 1.5,
      "colors": {
        "available": "#10B981",
        "taken": "#EF4444",
        "official": "#3B82F6"
      }
    },
    "performance": {
      "maxVisibleMarkers": 100,
      "frustumCulling": true,
      "shadowMapSize": 1024
    }
  },
  "communication": {
    "allowedOrigins": [
      "http://localhost:3000",
      "https://your-domain.com"
    ],
    "messageTypes": {
      "incoming": [
        "UPDATE_MOON_VIEW",
        "CRATER_DATA"
      ],
      "outgoing": [
        "MOON_READY",
        "CRATER_CLICKED",
        "VIEW_CHANGED"
      ]
    }
  },
  "assets": {
    "moonModelUrl": "Moon.glb",
    "textureQuality": "high",
    "compressionEnabled": true
  }
}